<body>
    <div class="container">
        <h1>URL Shortner</h1>
        <!-- post to short urls endpoint -->
        <form action="/shortUrl" method="POST" class="my-4 form-inline">

            <!-- <label for="input url"></label> -->
            <input required placeholder="url" type="url" name="full" id="full" class="form-control col mr-2">
            <button class='btn btn-success' type="submit">shrink</button>

        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>full url</th>
                    <th>small url</th>
                    <th>clicks</th>
                </tr>
            </thead>
            <tbody>
                <% try { %>
                    <!-- Render data items -->
                    <% shortUrl.forEach(shortUrl => { %>
                        <tr>
                            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                            <td><%= shortUrl.clicks %></td>
                        </tr>
                    <% }) %>
                <% } catch (error) { %>
                    <!-- Handle the error -->
                    console.log("An error occurred:");
                    <tr>
                        <td colspan="3">An error occurred while rendering the view </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
